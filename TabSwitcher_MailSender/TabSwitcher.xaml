<UserControl x:Class="TabSwitcher_MailSender.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabSwitcher_MailSender"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300" Height="Auto" Width="Auto">
    <Grid Height="29" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnPrevious" MinWidth="100" Grid.Column="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Image Source="res/arrow_left.png"/>
                <Label Content="Previous" Margin="5,5,0,0"/>
            </StackPanel>
        </Button>
        <Button x:Name="BtnNext" MinWidth="100" Grid.Column="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Next" Margin="0,5,5,0"/>
                <Image Source="res/arrow_right.png"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
